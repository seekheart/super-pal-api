<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
  <changeSet author="miketung" id="01">

    <createTable tableName="Raid">
      <column name="id" type="uuid">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="rank" type="int">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="League">
      <column name="id" type="uuid">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="raid_id" type="uuid">
        <constraints foreignKeyName="fk_raid" references="Raid(id)"/>
      </column>
    </createTable>

    <createTable tableName="Boss">
      <column name="id" type="uuid">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="name" type="varchar(180)">
        <constraints nullable="false"/>
      </column>
      <column name="hp" type="int"/>
      <column name="raid_id" type="uuid">
        <constraints foreignKeyName="fk_raid" references="Raid(id)"/>
      </column>
    </createTable>

    <createTable tableName="Team">
      <column name="id" type="uuid">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(25)">
      </column>
    </createTable>

    <createTable tableName="Player">
      <column name="id" type="uuid">
        <constraints nullable="false" primaryKey="true"/>
      </column>
      <column name="discord_id" type="uuid">
        <constraints unique="true"/>
      </column>
      <column name="name" type="varchar(256)">
        <constraints nullable="true" primaryKey="false" unique="false"/>
      </column>
      <column name="league_id" type="uuid">
        <constraints foreignKeyName="fk_league" references="League(id)"/>
      </column>
      <column name="role" type="varchar(250)"/>
    </createTable>

    <createTable tableName="Assignment">
      <column name="id" type="uuid">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="player_id" type="uuid">
        <constraints foreignKeyName="fk_player" references="Player(id)"/>
      </column>
      <column name="team_id" type="uuid">
        <constraints foreignKeyName="fk_team" references="Team(id)"/>
      </column>
      <column name="boss_id" type="uuid">
        <constraints foreignKeyName="fk_boss" references="Boss(id)"/>
      </column>
    </createTable>

  </changeSet>
</databaseChangeLog>